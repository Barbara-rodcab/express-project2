<h1>Sign up to AppSign</h1>

<form action="/signup" method="POST">
  <div class="mb-3">
    <label for="firstName" class="form-label">First name</label>
    <input value="{{user.firstName}}" class="form-control {{#if errors.firstName}}is-invalid{{/if}}" id="firstName" name="firstName">
    <div class="invalid-feedback">
      {{errors.firstName}}
    </div>
  </div>
  <div class="mb-3">
    <label for="lastName" class="form-label">Last name</label>
    <input value="{{user.lastName}}" class="form-control {{#if errors.lastName}}is-invalid{{/if}}" id="lastName" name="lastName">
    <div class="invalid-feedback">
      {{errors.lastName}}
    </div>
  </div>
  <div class="mb-3">
    <label for="dateOfBirth" class="form-label">Date of birth</label>
    <input type="date" value="{{user.dateOfBirth}}" class="form-control {{#if errors.dateOfBirth}}is-invalid{{/if}}" id="dateOfBirth" name="dateOfBirth">
    <div class="invalid-feedback">
      {{errors.dateOfBirth}}
    </div>
  </div>
  <div class="mb-3">
    <label for="timeOfBirth" class="form-label">Time of birth</label>
    <input type="time" value="{{user.timeOfBirth}}" class="form-control {{#if errors.timeOfBirth}}is-invalid{{/if}}" id="timeOfBirth" name="timeOfBirth">
    <div class="invalid-feedback">
      {{errors.timeOfBirth}}
    </div>
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">Email address</label>
    <input value="{{user.email}}" type="email" class="form-control {{#if errors.email}}is-invalid{{/if}}" id="email" name="email" aria-describedby="emailHelp">
    <div class="invalid-feedback">
      {{errors.email}}
    </div>
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" id="password" name="password">
    <div class="invalid-feedback">
      {{errors.password}}
    </div>
  </div>
  <div class="mb-3">
    <label for="repeat-password" class="form-label">Repeat password</label>
    <input type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" id="repeat-password" name="repeatPassword">
    <div class="invalid-feedback">
      {{errors.password}}
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Create account</button>
</form>